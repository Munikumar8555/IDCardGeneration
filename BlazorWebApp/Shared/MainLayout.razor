@inherits LayoutComponentBase
<div class="wrapper">
    @if (isLoggedIn)
    {
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/" class="brand-link">
                <img src="/favicon.ico" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">ID Card Admin</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/nextpage">
                                <i class="nav-icon fas fa-id-card"></i>
                                <p>Dashboard</p>
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/generate-id-card">
                                <i class="nav-icon fas fa-address-card"></i>
                                <p>Generate ID Card</p>
                            </NavLink>
                        </li>ingo
                    </ul>
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item" style="margin-top: 285px;">
                            <NavLink class="nav-link" href="/login">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Logout</p>
                            </NavLink>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
    }

    <!-- Center @Body using flex utilities -->
    <div class="content-wrapper" style="min-height: 100vh; display: flex; justify-content: center; align-items: center;">
        <section class="content w-112">
            <div class="container-fluid w-112" style="width: 112%;">
                @Body
            </div>
        </section>
    </div>
</div>

@code {
    private bool isLoggedIn => NavigationManager.Uri.Contains("nextpage");
    [Inject] NavigationManager NavigationManager { get; set; }
}
