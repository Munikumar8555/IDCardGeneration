@if (Show)
{
    <div class="toast-message @ToastType" style="position: fixed; top: 2rem; right: 2rem; z-index: 9999; min-width: 250px;">
        <div class="toast-content">
            <span>@Message</span>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public string Message { get; set; }
    [Parameter] public string ToastType { get; set; } = "success"; // or "error"
}

<style>
.toast-message {
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
    color: #fff;
    font-weight: 500;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    animation: fadeInOut 3s;
}
.toast-message.success { background: #22c55e; }
.toast-message.error { background: #ef4444; }
@@keyframes fadeInOut {
    0% { opacity: 0; transform: translateY(-20px); }
    10% { opacity: 1; transform: translateY(0); }
    90% { opacity: 1; transform: translateY(0); }
    100% { opacity: 0; transform: translateY(-20px); }
}
</style>
